<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>map</title>
</head>
<body>
<div id="map" style="width:80%;height:350px;"></div>
<script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=92cb297775fece43f08eacb009cd81b8"></script>
<script>
var mapContainer = document.getElementById('map'), // 지도를 표시할 div  
    mapOption = { 
        center: new kakao.maps.LatLng(37.5445, 126.9708), // 지도의 중심좌표
        level: 4 // 지도의 확대 레벨
    };
var map = new kakao.maps.Map(mapContainer, mapOption); // 지도를 생성합니다
 
// 마커를 표시할 위치와 title 객체 배열입니다 
var positions = [
    {title: '우돈갈비', 
        latlng: new kakao.maps.LatLng(37.5479, 126.9716)},
    {title: '갑돌네', 
        latlng: new kakao.maps.LatLng(37.5502, 126.9697)},
    {title: '청파 생고기', 
        latlng: new kakao.maps.LatLng(37.5501, 126.9697)},
];

// 마커 이미지의 이미지 주소입니다
var imageSrc = "https://t1.daumcdn.net/localimg/localimages/07/mapapidoc/markerStar.png"; 

//개별 마커 요소 생성
var marker = []
setClickable = true;

for (var i = 0; i < positions.length; i ++) {
    // 마커 이미지의 이미지 크기 입니다
    var imageSize = new kakao.maps.Size(24, 35); 

    // 마커 이미지를 생성합니다    
    var markerImage = new kakao.maps.MarkerImage(imageSrc, imageSize);

    // 마커를 생성합니다
    var element = new kakao.maps.Marker({
        map: map, // 마커를 표시할 지도
        position: positions[i].latlng, // 마커를 표시할 위치
        title : positions[i].title, // 마커의 타이틀, 마커에 마우스를 올리면 타이틀이 표시됩니다
        image : markerImage // 마커 이미지 
    }); 
    marker.push(element); // 마커 리스트에 개별 요소 추가
}

// 아래 코드는 위의 마커를 생성하는 코드에서 clickable: true 와 같이
// 마커를 클릭했을 때 지도의 클릭 이벤트가 발생하지 않도록 설정합니다
marker.setClickable(true);
// 마커를 지도에 표시합니다.
marker.setMap(map);

// // 마커를 클릭했을 때 마커 위에 표시할 인포윈도우를 생성합니다
// var iwContent = '<div style="padding:5px;">Hello World!</div>', // 인포윈도우에 표출될 내용으로 HTML 문자열이나 document element가 가능합니다
//     iwRemoveable = true; // removeable 속성을 ture 로 설정하면 인포윈도우를 닫을 수 있는 x버튼이 표시됩니다

// 음식점 개별 인포윈도우 생성 
var iwContent = [
    {content: '<div style="padding:5px;">우돈갈비</div>'},
    {content: '<div style="padding:5px;">갑돌네</div>'},
    {content: '<div style="padding:5px;">청파 생고기</div>'},
],
iwRemoveable = true;
;


// // 인포윈도우를 생성합니다
// var infowindow = new kakao.maps.InfoWindow({
//     content : iwContent,
//     removable : iwRemoveable
// });

//음식점 개별 인포윈도우 생성
var infowindow = []; // 빈 리스트 생성

for (var i = 0; i < positions.length; i ++) {
  var iwelement = new kakao.maps.InfoWindow({
    content : iwContent.content[i],
    removable : iwRemoveable
    });// 추가할 요소 값 생성
  infowindow.push(iwelement); // 리스트에 요소 추가
}

// 마커에 클릭이벤트를 등록합니다
for (var i = 0; i < positions.length; i ++) {
    kakao.maps.event.addListener(marker[i], 'click', function() {
      // 마커 위에 인포윈도우를 표시합니다
      infowindow[i].open(map, marker[i]);  
    });
}

</script>
</body>
</html>
